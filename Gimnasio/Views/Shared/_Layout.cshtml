<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gimnasio Bergondo</title>
    <link rel="icon" href="~/images/logo-black.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Gimnasio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark navbar-expand-sm navbar-toggleable-sm mb-3 box-shadow">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/images/logo-white.svg" width="50" height="50" alt="Logo del Gimnasio Bergondo" class="m-2" />
                </a>
                <button id="menu-toggle" class="navbar-toggler" type="button" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item mx-2 my-1">
                            <a class="nav-link text-white fs-5" asp-controller="Tarifa" asp-action="Index">Tarifas</a>
                        </li>
                        <li class="nav-item mx-2 my-1">
                            <a class="nav-link text-white fs-5" asp-controller="Actividad" asp-action="Index">Actividades</a>
                        </li>
                        <li class="nav-item mx-2 my-1">
                            <a class="nav-link text-white fs-5" asp-controller="Producto" asp-action="Index">Productos</a>
                        </li>
                    </ul>
                    <div class="text-end">
                        <ul class="navbar-nav">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item m-md-2 m-1">
                                    <a class="btn btn-primary text-white" asp-controller="Usuario" asp-action="Registro">Registrarme</a>
                                </li>
                                <li class="nav-item m-md-2 m-1">
                                    <a class="btn btn-success text-white" asp-controller="Login" asp-action="Index">Iniciar sesión</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown mx-5">
                                    <a class="nav-link dropdown-toggle text-white fs-4" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @User.Identity.Name  <i class="bi bi-person-lines-fill text-white fs-4"></i>
                                    </a>
                                    <div class="dropdown-menu drop-down-menu-right" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item text-black" asp-controller="Carrito" asp-action="Index"><i class="bi bi-cart-dash fs-4 mx-md-1"></i>Mi carrito</a>
                                        <a class="dropdown-item text-black" asp-controller="Pedido" asp-action="Index"><i class="bi bi-bag-check fs-4 mx-md-1"></i>Ver pedidos</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item text-black" asp-controller="Contrato" asp-action="Detalles"><i class="bi bi-folder-fill fs-4 mx-md-1"></i>Mi contrato</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item text-black" asp-controller="UsuarioActividad" asp-action="Index"><i class="bi bi-person-arms-up fs-4 mx-md-1"></i>Mis actividades</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item text-black" asp-controller="Usuario" asp-action="Detalles"><i class="bi bi-person-fill fs-4 mx-md-1"></i>Ver perfil</a>
                                        <a class="dropdown-item text-black" asp-controller="Usuario" asp-action="Modificacion"><i class="bi bi-person-fill-gear fs-4 mx-md-1"></i>Modificar datos</a>
                                        <a class="dropdown-item" id="linkCerrarSesion" asp-controller="Login" asp-action="Salir"><i class="bi bi-person-fill-dash fs-4 mx-md-1"></i>Cerrar sesión</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black">
        <div class="container text-center">
            <span class="text-white">&copy; 2024 - Gimnasio Bergondo - <a asp-controller="Home" asp-action="Privacy" class="link text-white">Ver privacidad</a></span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
