@model List<Gimnasio.Models.Producto>

@{
    ViewData["Title"] = "Listado de productos";
}

<h1 class="my-3 text-center">Listado de productos</h1>

<div class="card-group">
    @foreach (var item in Model)
    {
        <div class="col-md-3 my-3">
            <div class="card h-100 d-flex flex-column">
                <div class="row align-items-center" style="height: 60%;">
                    <img class="cad-img-top img-fluid col p-4" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Foto)" alt="@item.Nombre" />
                </div>
                <div class="card-body ">
                    <h5 class="card-title">@Html.DisplayFor(m => item.Nombre)</h5>
                    <h6>@Html.DisplayFor(m => item.Precio)</h6>
                </div>
                <div class="text-center" style="margin-bottom: 3vh;">
                    <input type="hidden" value="@item.Id" />
                    <button class="btn btn-dark text-white" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-cart-dash fs-4 mx-md-1"></i>Agregar al carrito</button>
                </div>
            </div>
        </div>
    }
</div>
